page {
  background: #fff;
}
.recharge-title {
  padding: 24rpx;
}
.recharge-send {
  flex-wrap: wrap;
  width: 100%;
  padding: 24rpx;
}
.recharge-send .send-li {
  width: 100%;
  height: 100rpx;
  border: 1px solid #e3e3e3;
  border-radius: 12rpx;
  padding: 12rpx 24rpx;
  margin-bottom: 24rpx;
}
.recharge-send .send-li .send-tag {
  margin-left: 24rpx;
  display: inline-block;
  padding: 4rpx 16rpx;
  background: #FF3366;
  color: #fff;
  border-radius: 8rpx 0;
  font-size: 28rpx;
}
.recharge-send .send-li-input {
  width: 100%;
  height: 100%;
}
.recharge-send .active {
  border: 2px solid #FF3366;
}
.rechage-btn {
  width: 100%;
  background: #FF3366;
  color: #fff;
  border-radius: 80rpx;
  margin-top: 48rpx;
}
