page {
  background: #fff;
}
.apply-banner {
  width: 100%;
  height: 400rpx;
}
.apply-banner .cover {
  width: 100%;
  height: 100%;
}
.apply-title {
  padding: 24rpx;
}
.apply-form {
  padding: 24rpx;
}
.apply-form .form-label {
  padding: 24rpx 0;
  border-bottom: 1px solid #f4f4f4;
}
.apply-form .form-input {
  height: 80rpx;
  line-height: 80rpx;
}
.apply-form .requeire {
  color: red;
  position: relative;
  top: 4rpx;
  margin-right: 4rpx;
}
.apply-form .rule {
  width: 100%;
}
.apply-form .rule .xieyi {
  color: #0066FF;
}
.apply-form .submit-btn {
  width: 100%;
  height: 90rpx;
  border-radius: 90rpx;
  background: #FF3366;
  margin-top: 48rpx;
}
.apply-condition {
  width: 100%;
}
.apply-condition .cond-tips {
  width: 100%;
  justify-content: center;
  padding-top: 48rpx;
}
.apply-condition .cond-tips .error-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #ff8c25;
  color: #fff;
  text-align: center;
  line-height: 48rpx;
  font-size: 44rpx;
  margin-right: 12rpx;
}
.apply-condition .cond-content {
  width: 100%;
  text-align: center;
  margin-top: 48rpx;
}
.apply-condition .cond-content .cond-txt {
  color: #FF3333;
}
.apply-check {
  width: 100%;
  padding-top: 120rpx;
}
.apply-check .check-success {
  width: 100%;
  justify-content: center;
}
.apply-check .check-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #00CC66;
  color: #fff;
  text-align: center;
  line-height: 48rpx;
  font-size: 44rpx;
  margin-right: 12rpx;
}
.apply-check .check-reason {
  padding: 0 24rpx;
  text-align: center;
}
.to-btn {
  width: 50%;
  height: 80rpx;
  border-radius: 80rpx;
  text-align: center;
  line-height: 80rpx;
  color: #FF3366;
  margin-left: 25%;
  border: 1px solid #FF3366;
  margin-top: 48rpx;
}