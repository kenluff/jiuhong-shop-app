page {
  background: #fff;
}
.type-search {
  width: 100%;
  height: 60px;
  position: fixed;
  top: 0;
  padding: 24rpx;
}
.type-search .search-inpit {
  width: 100%;
  height: 70rpx;
  border-radius: 70rpx;
  background: #f4f4f4;
  text-align: center;
  line-height: 60rpx;
  color: #999;
}
.type-search .search-inpit .ri-search-2-line {
  font-size: 32rpx;
  margin-right: 12rpx;
  position: relative;
  top: 4rpx;
}
.type-con {
  width: 100%;
  position: fixed;
  height: 200px;
  top: 60px;
}
.type-con-left {
  width: 100px;
  height: 100%;
  background: #f4f4f4;
}
.type-con-left .type-item {
  width: 100%;
  height: 100rpx;
  border-bottom: 1px solid #f4f4f4;
  text-align: center;
  line-height: 100rpx;
  font-size: 28rpx;
  color: #666;
}
.type-con-left .active {
  background: #fff;
  position: relative;
}
.type-con-left .active:before {
  content: "";
  position: absolute;
  width: 10rpx;
  height: 100%;
  background: #FF3366;
  left: -1px;
}
.type-con-right {
  width: 50%;
  flex: 1;
}
.type-con-right .type-ul {
  flex-wrap: wrap;
  align-content: flex-start;
}
.type-con-right .right-item {
  width: 32%;
  height: 180rpx;
  text-align: center;
}
.type-con-right .right-item .type-icon {
  width: 100rpx;
  height: 100rpx;
}