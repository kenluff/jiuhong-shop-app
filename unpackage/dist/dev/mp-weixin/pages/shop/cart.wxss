.cart-item {
  width: 100%;
  background: #fff;
  padding: 24rpx;
  align-items: center;
}
.cart-item .goods {
  flex: 1;
  margin-left: 24rpx;
}
.cart-item .goods-right {
  margin-left: 24rpx;
  width: 400rpx;
  flex: 1;
}
.cart-item .put-away {
  display: inline-block;
  font-size: 12px;
  background: #eee;
  padding: 2rpx 6rpx;
  color: #999;
}
.cart-item .name {
  width: 90%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  flex: 1;
  margin-left: 6rpx;
}
.cart-item .price {
  color: #FF0033;
}
.cart-item .cover {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
}
.delete-con {
  width: 200rpx;
  height: 100%;
  background: #FF0033;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  margin-left: 2rpx;
}
.cart-item-disable {
  background: #ececec;
}
.footer-con {
  width: 100%;
  height: 120rpx;
  background: #fff;
  position: fixed;
  padding: 0 24rpx;
  align-items: center;
  bottom: 0;
}
.footer-con-btn {
  padding: 16rpx 48rpx;
  background: #FF3366;
  border-radius: 80rpx;
  color: #fff;
}
.footer-con .total {
  color: #FF0033;
}
.login-btn {
  width: 100%;
  justify-content: center;
  align-items: center;
  margin-top: 240rpx;
}
.login-btn .to-btn {
  width: 220rpx;
  background: #FF3366;
  text-align: center;
  height: 64rpx;
  border-radius: 64rpx;
  color: #fff;
  line-height: 56rpx;
}
.login-btn .to-btn .ri-arrow-right-line {
  position: relative;
  top: 4rpx;
}