.address-form {
  width: 100%;
  padding: 32rpx;
}
.address-form .form-item {
  width: 100%;
  min-height: 100rpx;
  align-items: center;
  margin-top: 24rpx;
  position: relative;
}
.address-form .form-item .title {
  width: 200rpx;
}
.address-form .form-item .input {
  flex: 1;
  width: 60%;
  background: #f4f4f4;
  min-height: 90rpx;
  border-radius: 24rpx;
  padding-left: 24rpx;
  line-height: 90rpx;
}
.address-form .form-item .ri-map-pin-fill {
  position: absolute;
  right: 24rpx;
  font-size: 44rpx;
  color: #FF6633;
}
